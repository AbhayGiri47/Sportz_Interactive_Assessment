<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMatchDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tvSeriesNameINDNZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/india_tour_of_new_zealand_2019" />

        <LinearLayout
            android:id="@+id/llTeamNameINDNZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvSeriesNameINDNZ">

            <TextView
                android:id="@+id/tvTeam1NameINDNZ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textAllCaps="true"
                android:textSize="16sp"
                tools:text="India" />

            <TextView
                android:id="@+id/tvVSINDNZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="16sp"
                tools:text="vs" />

            <TextView
                android:id="@+id/tvTeam2NameINDNZ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="4dp"
                android:textAllCaps="true"
                android:textSize="16sp"
                tools:text="New Zealand" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDateTimeINDNZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/llTeamNameINDNZ">

            <TextView
                android:id="@+id/tvDateINDNZ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textSize="16sp"
                tools:text="Tue,Jan 24" />

            <TextView
                android:id="@+id/tvTimeINDNZ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="4dp"
                android:textSize="16sp"
                tools:text="01:30 pm" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvVenueINDNZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="16sp"
            tools:text="Seddon Park, Hamilton"
            app:layout_constraintTop_toBottomOf="@+id/llDateTimeINDNZ"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_gray_500"
            app:layout_constraintTop_toBottomOf="@+id/tvVenueINDNZ">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="16sp"
                android:gravity="end"
                android:layout_marginEnd="6dp"
                android:text="@string/view_more"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>